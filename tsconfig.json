{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "dist/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true
  },
  "exclude": [
    "example",
    "node_modules",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
